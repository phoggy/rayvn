#!/usr/bin/env bash

usage() {
    echo
    echo "$(ansi bold does, uh... $(ansi italic something))."
    echo
    echo "Usage: $(ansi bold ${scriptName}) <options>"
    echo
    echo "Options:"
    echo
    echo "    -h, --help        Print this help message and exit."
    echo "    -v                Print the version and exit."
    echo "    --version         Print the version with release date and exit."
    echo
    bye "${@}"
}

main() {
    init "${@}"
    doSomething
    myExampleLibraryFunction
}

# shellcheck disable=SC2155
init() {
    declare -r scriptName=$(baseName "${0}")

    while (( ${#} > 0 )); do
        case "${1}" in
            -h | --help) usage ;;
            -v) projectVersion 'function_collision'; exit 0 ;;
            --version) projectVersion 'function_collision' true; exit 0 ;;
            --debug) setDebug showOnExit ;;
            --debug-new) setDebug clearLog showOnExit ;;
            --debug-out) setDebug tty "${terminal}" ;;
            --debug-tty) shift; setDebug tty "${1}" ;;
            *) usage "Unknown option: ${1}" ;;
        esac
        shift
    done

    # CHECK INPUTS
}

# TODO remove me!
doSomething() {
    echo "ðŸŒ± $(ansi bold_yellow doSomething here!) ðŸŒ± "
}

source rayvn.up --add 'rayvn_up' 'rayvn/core' 'function_collision/example'

main "${@}"


